#alias vi=nvim
alias g="git"
alias icat="kitty +kitten icat"
alias pip='uv pip'
alias sc="source .venv/bin/activate"

export EDITOR='nvim'
export PATH=/opt/homebrew/anaconda3/bin:$PATH
export PATH=$HOME/.local/bin:$PATH

#export FZF_DEFAULT_COMMAND="fd --type f"
#source <(fzf --zsh)

venv()
{
	source ~/.venvs/$1/bin/activate
}

vv()
{
	uv venv --python 3.11.5
	echo 'export VIRTUAL_ENV=".venv"\nlayout python' > .envrc
	direnv allow
	source .venv/bin/activate
	pip install pynvim debugpy
}

# Install Starship prompt if not already installed
command -v starship >/dev/null 2>&1 || curl -sS https://starship.rs/install.sh | sh -s -- --bin-dir ~/.local/bin
